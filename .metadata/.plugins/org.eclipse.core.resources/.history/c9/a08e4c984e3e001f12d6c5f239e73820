package Atribuicao;

public class DesafioTemperatura {
	public static void main(String[] args) {
		//(°F - 32) x 5.0/9.0 = °C
		
		final double Fator = 5.0/9.0;
		final double Ajuste = 32;
		double Cel;
		double Far = 1;
		
		Cel = (Far - Ajuste) * Fator;
	
	System.out.println("Temperatura convertida para:" + Cel + "°C");
	
	}

}
















	public static void main(String[] args) {
		// (°F - 32) x 5/9.0 = °C
		final double Fator = 5.0/9.0;
		final double Ajuste = 32;
		double Far = 80;
